<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ln_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:gravity="left|top"
        android:paddingLeft="16dp"
        android:orientation="horizontal"
        android:visibility="visible">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="50dp"
            android:visibility="gone"
            android:id="@+id/ivProfile"
            android:layout_height="50dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.seazoned.customtext.Custom_Text_View
            android:id="@+id/tv_left"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_bubbole2"
            android:paddingBottom="10dp"
            android:paddingLeft="45dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
            <com.seazoned.customtext.Custom_Text_View
                android:id="@+id/tvLeftTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:visibility="gone"
                android:paddingBottom="10dp"
                android:paddingLeft="45dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.seazoned.customtext.Custom_Text_View
            android:id="@+id/tv_right"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_bubbole"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
            <com.seazoned.customtext.Custom_Text_View
                android:id="@+id/tvRightTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:visibility="gone"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
