<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.seazoned.customtext.Custom_Text_View_SemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:background="@drawable/change_button_round_corner"
            android:gravity="center"
            android:text="Sun"
            android:id="@+id/tvDayName"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivWeatherImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.seazoned.customtext.Custom_Text_View_SemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvHighTemp"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <com.seazoned.customtext.Custom_Text_View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:text="o"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <com.seazoned.customtext.Custom_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/tvLowTemp"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <com.seazoned.customtext.Custom_Text_View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:text="o"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</layout>