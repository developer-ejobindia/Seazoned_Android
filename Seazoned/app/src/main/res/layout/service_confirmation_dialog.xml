<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <com.seazoned.customtext.Custom_Text_View_SemiBold
        android:text="!!! Congratulations !!!"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content" />
    <com.seazoned.customtext.Custom_Text_View
        android:text="Your service request has been submitted to the Seazoned provider that you chose."
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content" />
    <com.seazoned.customtext.Custom_Text_View
        android:text="You will be notified shortly that the provider has accepted the request."
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content" />
    <com.seazoned.customtext.Custom_Text_View_SemiBold
        android:text="Stay Seazoned"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content" />
    <com.seazoned.customtext.Custom_Text_View_SemiBold
        android:id="@+id/tvDone"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/green_gradient_round"
        android:gravity="center"
        android:text="Done"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />


</LinearLayout>